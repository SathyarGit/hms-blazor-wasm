@inject IStringLocalizer<NavMenu> L

<PersonCard
    Style="background-color: var(--mud-palette-drawer-background);color: var(--mud-palette-drawer-text); margin-bottom:0px!important" />
<MudNavMenu>
    <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">@L["Start"]</MudText>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">@L["Home"]</MudNavLink>
    <MudNavLink Href="https://fullstackhero.net/basics/getting-started/" Match="NavLinkMatch.All" Target="_blank"
        Icon="@Icons.Material.Filled.RocketLaunch">@L["Getting Started"]</MudNavLink>
    @if (_canViewHangfire)
    {
        <MudNavLink Href="@_hangfireUrl" Match="NavLinkMatch.All" Target="_blank" Icon="@Icons.Material.Filled.Work">@L["Hangfire"]</MudNavLink>
    }
    <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">@L["Personal"]</MudText>
    @if (_canViewDashboard)
    {
        <MudNavLink Href="/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Filled.Dashboard">@L["Dashboard"]</MudNavLink>
    }
    <MudNavLink Href="/account" Icon="@Icons.Filled.ManageAccounts">@L["Account"]</MudNavLink>
    <MudNavLink Href="/audit-logs" Icon="@Icons.Material.Filled.SecurityUpdateGood">@L["Logs"]</MudNavLink>
    @if (_canViewProducts || _canViewBrands || _canViewRoomtypes || _canViewRoomstatuses || _canViewDepartments || _canViewBookingstatuses || _canViewCustomerclassifications
    || _canViewFloors || _canViewRooms || _canViewCustomers || _canViewEmployees || _canViewExpensecategories || _canViewFoliotypes || _canViewPaymentmodes
    || _canViewTransactionstatuses || _canViewTransactiontypes || _canViewTravelagents || _canViewVendors)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">@L["Management"]</MudText>
        <MudNavGroup Title="Hotel Setup" Expanded Icon="@Icons.Filled.AddBox">
            @if (_canViewDepartments)
            {
                <MudNavLink Href="/hms/departments" Icon="@Icons.Filled.Settings" Class="fsh-nav-child">
                    Departments
                </MudNavLink>
            }
            @if (_canViewRoomtypes)
            {
                <MudNavLink Href="/hms/roomtypes" Icon="@Icons.Filled.RoomPreferences" Class="fsh-nav-child">
                        Room Types
                </MudNavLink>
            }
            @if (_canViewRoomstatuses)
            {
                <MudNavLink Href="/hms/roomstatuses" Icon="@Icons.Filled.RoomPreferences" Class="fsh-nav-child">
                    Room Statuses
                </MudNavLink>
            }
            @if (_canViewBookingstatuses)
            {
                <MudNavLink Href="/hms/bookingstatuses" Icon="@Icons.Filled.Settings" Class="fsh-nav-child">
                    Booking Statuses
                </MudNavLink>
            }
            @if (_canViewCustomerclassifications)
            {
                <MudNavLink Href="/hms/customerclassifications" Icon="@Icons.Filled.Settings" Class="fsh-nav-child">
                    Customer Classifications
                </MudNavLink>
            }
            @if (_canViewCustomers)
            {
                <MudNavLink Href="/hms/customers" Icon="@Icons.Filled.Settings" Class="fsh-nav-child">
                    Customers
                </MudNavLink>
            }
            @if (_canViewFloors)
            {
                <MudNavLink Href="/hms/floors" Icon="@Icons.Filled.Settings" Class="fsh-nav-child">
                    Floors
                </MudNavLink>
            }
            @if (_canViewRooms)
            {
                <MudNavLink Href="/hms/rooms" Icon="@Icons.Filled.MeetingRoom" Class="fsh-nav-child">
                    Rooms
                </MudNavLink>
            }
            @if (_canViewEmployees)
            {
                <MudNavLink Href="/hms/employees" Icon="@Icons.Filled.Person" Class="fsh-nav-child">
                    Employees
                </MudNavLink>
            }
            @if (_canViewExpensecategories)
            {
                <MudNavLink Href="/hms/expensecategories" Icon="@Icons.Filled.AttachMoney" Class="fsh-nav-child">
                    Expense Categories
                </MudNavLink>
            }
             @if (_canViewFoliotypes)
            {
                <MudNavLink Href="/hms/foliotypes" Icon="@Icons.Filled.Settings" Class="fsh-nav-child">
                    Folio Types
                </MudNavLink>
            }
            @if (_canViewPaymentmodes)
            {
                <MudNavLink Href="/hms/paymentmodes" Icon="@Icons.Filled.AttachMoney" Class="fsh-nav-child">
                    Payment Modes
                </MudNavLink>
            }
            @if (_canViewTransactionstatuses)
            {
                <MudNavLink Href="/hms/transactionstatuses" Icon="@Icons.Filled.AttachMoney" Class="fsh-nav-child">
                    Transaction Statuses
                </MudNavLink>
            }
            @if (_canViewTransactiontypes)
            {
                <MudNavLink Href="/hms/Transactiontypes" Icon="@Icons.Filled.AttachMoney" Class="fsh-nav-child">
                    Transaction Types
                </MudNavLink>
            }
            @if (_canViewTravelagents)
            {
                <MudNavLink Href="/hms/travelagents" Icon="@Icons.Filled.Settings" Class="fsh-nav-child">
                    Travel Agents
                </MudNavLink>
            }
            @if (_canViewVendors)
            {
                <MudNavLink Href="/hms/vendors" Icon="@Icons.Filled.Settings" Class="fsh-nav-child">
                    Vendors
                </MudNavLink>
            }
        </MudNavGroup>
        <MudNavGroup Title="@L["Catalog"]" Expanded Icon="@Icons.Filled.AddBox">
            @if (_canViewProducts)
            {
                <MudNavLink Href="/catalog/roomucts" Icon="@Icons.Filled.ShoppingBag" Class="fsh-nav-child">
                    @L["Products"]
                </MudNavLink>
            }
            @if (_canViewBrands)
            {
                <MudNavLink Href="/catalog/brands" Icon="@Icons.Filled.ShoppingBag" Class="fsh-nav-child">
                    @L["Brands"]
                </MudNavLink>
            }
        </MudNavGroup>
    }
    @if (CanViewAdministrationGroup)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">@L["Administration"]</MudText>
        @if (_canViewUsers)
        {
            <MudNavLink Match="NavLinkMatch.Prefix" Href="/users" Icon="@Icons.Material.Filled.PeopleAlt">@L["Users"]</MudNavLink>
        }
        @if (_canViewRoles)
        {
            <MudNavLink Href="/roles" Icon="@Icons.Material.Filled.EmojiPeople">@L["Roles"]</MudNavLink>
        }
        @if(_canViewTenants)
        {
            <MudNavLink Href="/tenants" Icon="@Icons.Filled.GroupWork" Disabled="!_canViewTenants">@L["Tenants"]</MudNavLink>
        }
    }
</MudNavMenu>