@page "/hms/travelagents"
@attribute [MustHavePermission(FSHAction.View, FSHResource.Travelagents)]

@inject IStringLocalizer<Travelagents> L

<FshTitle Title="Travel Agents" Description="Manage Travel Agents." />

<EntityTable @ref="_table" TEntity="TravelagentDto" TId="Guid" TRequest="TravelagentViewModel" Context="@Context">
    <EditFormContent>
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" md="6">
                <MudTextField Value="context.Id" ReadOnly DisableUnderLine Label="Travelagent Id" />
            </MudItem>
        }
        <MudItem xs="12" md="6">
            <MudTextField Label="Name" For="@(() => context.Name)" @bind-Value="context.Name" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Label="Address Line 1" For="@(() => context.AddressLine1)" @bind-Value="context.AddressLine1" />
        </MudItem>

        <MudItem xs="12" md="6">
            <MudTextField Label="Address Line 2" For="@(() => context.AddressLine2)" @bind-Value="context.AddressLine2" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Label="City" For="@(() => context.City)" @bind-Value="context.City" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Label="Country" For="@(() => context.Country)" @bind-Value="context.Country" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Label="Pincode" For="@(() => context.Pincode)" @bind-Value="context.Pincode" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Label="Phone Number" For="@(() => context.PhoneNumber)" @bind-Value="context.PhoneNumber" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Label="Email" For="@(() => context.Email)" @bind-Value="context.Email" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Label="Notes" For="@(() => context.Notes)" @bind-Value="context.Notes" />
        </MudItem>
    </EditFormContent>

</EntityTable>